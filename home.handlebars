<div class="row">
    <div class="thing">
        <form action="/reg_numbers" method="POST">
            <div>
                <div class="header">
                    <h1>The Registration Display</h1>
                </div>
                <div class="error">
                    {{#if messages}}
                    {{messages.error}}
                    {{/if}}
                </div>
                <div class="example">
                    <p class="eg">
                        Cape Town (CA) || Paarl (CJ) || Bellville (CY)
                        <br>
                        <br>

                        CA 1234 || CJ 123-456 || CY 123 234
                    </p>
                </div>
                <div class="main">
                    <input name="regInput" class="regString" placeholder="enter registration here">
                    <button type="submit" name="addBtn">Add</button>
                </div>
        </form>

        <form action="/clear" method="GET">

            <div class="clear">
                <button type="submit" name="clearBtn">Clear items</button>
            </div>
        </form>


        <form action="/reg_numbers" method="GET">
            <div class="dropDown ">
                <select name="filter">
                    <option value='all'>All</option>
                    <option value='1'>Cape Town</option>
                    <option value='2'>Paarl</option>
                    <option value='3'>Bellville</option>
                </select>
                <button type="submit">Filter</button>
            </div>


            <div class="regDisplay">
                <ul>
                    {{#each regNumb}}
                    <li class="regColor">{{this.reg_numb}}</li>
                    {{/each}}
                </ul>
            </div>

        </form>

        <div class="success">
            {{#if messages}}
            {{messages.success}}
            {{/if}}
        </div>
    </div>
</div>
<script>
    setTimeout(function () {
        document.querySelector(".error").innerHTML = ""
    }, 2000)


    setTimeout(function () {
        document.querySelector(".success").innerHTML = ""
    }, 1000)
</script>